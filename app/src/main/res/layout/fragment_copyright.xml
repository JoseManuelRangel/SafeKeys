<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/copyrightLayout"
    android:background="@color/azure"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.CopyrightFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/copyrightCard"
        android:backgroundTint="@color/white"
        android:elevation="20dp"
        android:layout_width="340dp"
        android:layout_height="650dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/lottielogo" />

            <ImageView
                android:layout_width="310dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/lottietext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="CREADORES DE LOS LOTTIE UTILIZADOS"
                android:textColor="@color/black"
                android:fontFamily="@font/reemkufiregular" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/lottieuser" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/lottieuser2" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>