<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/keyLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azure"
    tools:context=".view.fragments.KeyeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/keyInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/azure"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/buttonKeyGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/editKeyButton"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/maxClearAzure"
                    android:text="EDITAR"
                    android:layout_marginTop="-4dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/reemkufibold"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/dropKeyButton"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/clearAzure"
                    android:layout_marginTop="-4dp"
                    android:text="BORRAR"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/reemkufibold"
                    app:cornerRadius="0dp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/titleCard"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:elevation="20dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:id="@+id/tl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/keyTitleImg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/keyicon"
                        android:layout_gravity="center"
                        app:tint="@color/azure" />

                    <TextView
                        android:id="@+id/keyTitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Título"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/reemkufiregular"
                        android:layout_gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/userCard"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:elevation="20dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:id="@+id/ul"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/keyUserImg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/personicon"
                        android:layout_gravity="center"
                        app:tint="@color/azure" />

                    <TextView
                        android:id="@+id/keyUserText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Usuario"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/reemkufiregular"
                        android:layout_gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/passCard"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:elevation="20dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:id="@+id/pl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/keyPassImg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/keypassicon"
                        android:layout_gravity="center"
                        app:tint="@color/azure" />

                    <TextView
                        android:id="@+id/keyPassText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Contraseña"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/reemkufiregular"
                        android:layout_gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/descCard"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:elevation="20dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:id="@+id/dl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/keyDescImg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/descriptionicon"
                        android:layout_gravity="center"
                        app:tint="@color/azure" />

                    <TextView
                        android:id="@+id/keyDescText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Descripción"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/reemkufiregular"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="5dp"/>

                    <Space
                        android:id="@+id/descspace"
                        android:layout_width="match_parent"
                        android:layout_height="100dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/catCard"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:elevation="20dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:id="@+id/catl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/keyCatImg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/caticon"
                        android:layout_gravity="center"
                        app:tint="@color/azure" />

                    <TextView
                        android:id="@+id/keyCatText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Categoría"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/reemkufiregular"
                        android:layout_gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/isFavoriteKeyImg"
                android:layout_width="79dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="100dp"
                android:src="@drawable/starunselectedicon" />
        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>